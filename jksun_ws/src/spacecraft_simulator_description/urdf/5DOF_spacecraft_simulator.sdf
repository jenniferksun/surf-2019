<sdf version='1.6'>
  <model name='spacecraft_simulator'>
    <link name='base_link'>
      <pose frame=''>0 0 0 0 -0 0</pose>
      <inertial>
        <pose frame=''>0 0 0 0 0 0</pose>
        <mass>8.764</mass>
        <inertia>
          <ixx>3.79</ixx>
          <ixy>-0.12</ixy>
          <ixz>0.01</ixz>
          <iyy>0.2</iyy>
          <iyz>-0.01</iyz>
          <izz>3.8</izz>
        </inertia>
      </inertial>
      <collision name='base_link_collision'>
        <pose frame=''>0 0 0 0 0 0</pose>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://spacecraft_simulator_description/meshes/sc_bot_ball_v2.dae</uri>
          </mesh>
        </geometry>
        <surface>
          <contact>
            <ode>
              <!-- Counts a collision at a minimum of 0.0 meters of overlap -->
              <min_depth>0.0</min_depth>
              <max_vel>0.5</max_vel>
            </ode>
          </contact>
          <friction>
            <ode>
              <mu>0.0</mu>
              <mu2>0.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name='base_link_visual'>
        <pose frame=''>0 0 0 0 0 0</pose>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://spacecraft_simulator_description/meshes/sc_bot_ball_v2.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <link name='upper_stage'>
      <pose frame=''>0 0 0 0 0 0</pose>
      <inertial>
        <pose frame=''>0 0 0.69429 0 0 0</pose>
        <!-- <mass>2</mass> -->
        <mass>11.126</mass>
        <inertia>
          <ixx>0.27</ixx>
          <ixy>0</ixy>
          <ixz>0.02</ixz>
          <iyy>0.48</iyy>
          <iyz>0</iyz>
          <izz>0.25</izz>
        </inertia>
      </inertial>
      <collision name='upper_stage_collision'>
        <pose frame=''>0 0 -0.06 0 0 0</pose>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://spacecraft_simulator_description/meshes/sc_top_ball.dae</uri>
          </mesh>
        </geometry>
      </collision>
      <visual name='upper_stage_visual'>
        <pose frame=''>0 0 -0.06 0 0 0</pose>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://spacecraft_simulator_description/meshes/sc_top_ball.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <joint name='air_bearing' type='ball'>
      <child>upper_stage</child>
      <parent>base_link</parent>
      <axis>
        <xyz>1 1 0</xyz>
        <limit>
          <lower>-0.7854</lower>
          <upper>0.7854</upper>
        </limit>
      </axis>
    </joint>
    <static>0</static>
<!-- 
    <joint name='connect_links' type='fixed'>
      <child>upper_stage</child>
      <parent>base_link</parent>
    </joint> -->

<!--===========================================================================
GAZEBO PLUGINS (plugins used to connect ROS with the Gazebo model)
============================================================================-->

    <plugin name='thruster_force_controller' filename='libspacecraft_thruster16_force.so'>
      <bodyName>upper_stage</bodyName>
      <topicName>thruster16_force</topicName>
    </plugin>

    <plugin name='sc_model_pose' filename='libgazebo_ros_p3d.so'>
      <alwaysOn>1</alwaysOn>
      <updateRate>100.0</updateRate>
      <bodyName>upper_stage</bodyName>
      <topicName>sc_pose</topicName>
      <gaussianNoise>0.0</gaussianNoise>
      <frameName>map</frameName>
      <xyzOffsets>0 0 0</xyzOffsets>
      <rpyOffsets>0 0 0</rpyOffsets>
    </plugin>
  </model>
</sdf>
