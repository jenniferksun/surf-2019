  <!-- Represents the spacecraft simulator model -->
  <link name="base_link">
    <inertial>
      <mass value="15"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="27.60" iyy="3.36" izz="28.06"
               ixy="-5.21" ixz="0.86" iyz="-4.00"/>
    </inertial>
    <visual>
      <geometry>
        <!-- <box size="0.6 0.3 0.3"/> -->
        <mesh filename="package://spacecraft_simulator_description/meshes/spacecraft-simulator-simple.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <!-- <box size="0.46 0.46 0.76"/> -->
        <mesh filename="package://spacecraft_simulator_description/meshes/spacecraft-simulator-simple.dae"/>
      </geometry>
      <surface>
        <contact>
          <ode>
            <!-- Counts a collision at a minimum of 0.0 meters of overlap -->
            <min_depth>0.0</min_depth>
            <max_vel>0.5</max_vel>
          </ode>
        </contact>
        <friction>
          <ode>
            <mu>0.0</mu>
            <mu2>0.0</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
  </link>

  <gazebo>
    <!-- ros_control plugin for parsing the transmission tags and loading the
    appropriate hardware interfaces and controller manager -->
    <!-- <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/spacecraft_simulator</robotNamespace>
    </plugin> -->

    <plugin name="object_controller" filename="libgazebo_ros_planar_move.so">
      <commandTopic>sc3/cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <odometryRate>20.0</odometryRate>
      <robotBaseFrame>base_link</robotBaseFrame>
    </plugin>

    <plugin name="force_controller" filename="libgazebo_ros_force.so">
      <bodyName>spacecraft_simulator</bodyName>
      <topicName>sc3/ros_force</topicName>
    </plugin>
  </gazebo>


  <!-- Links actuator (what controls movement) and joint (what is being moved)
  to use ros_control with the spacecraft model -->
  <!-- <transmission name="sc_transmission">
